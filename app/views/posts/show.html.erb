<h1>show-post</h1>
<small> id: <%= @post.id %></small>
<p>Tag: <%= link_to @post.tag, tag_path(tag: @post.tag) %></p>
<h4><%= @post.title %></h4>
<% if @post.image.attached? %>
  <%= image_tag @post.image.variant(resize: "100x100") %>
<% end %>
<p><%= @post.body %></p>
<hr>

<% if user_signed_in? %>
  <%= render 'comments/form' %>
<%end %>

<h3 >Комментарии <%= @post.comments.count %></h3>
<div>
  <% @post.comments.each do |cmt| %>
    <%= render 'comments/comment', comment: cmt %>
  <%end %>
</div>